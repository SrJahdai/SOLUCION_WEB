@{
    ViewData["Title"] = "Denegado";
    Layout = "_Layout"; // Si tienes un layout específico para vistas de autenticación, usa este.
}

<div class="container text-center my-5">
    <div class="card border-warning mx-auto" style="max-width: 400px;">
        <div class="card-body">
            <h1 class="display-4 text-warning">Acceso Denegado</h1>
